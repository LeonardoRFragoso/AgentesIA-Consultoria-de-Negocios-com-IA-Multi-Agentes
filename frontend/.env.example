# ============================================
# FRONTEND - ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env.local e preencha os valores

# --------------------------------------------
# APLICAÇÃO
# --------------------------------------------
NEXT_PUBLIC_APP_NAME=AgentesIA
NEXT_PUBLIC_APP_URL=https://app.seudominio.com.br
NEXT_PUBLIC_API_URL=https://api.seudominio.com.br
NEXT_PUBLIC_ENV=production

# --------------------------------------------
# AUTENTICAÇÃO
# --------------------------------------------
NEXTAUTH_URL=https://app.seudominio.com.br
NEXTAUTH_SECRET=gere-uma-chave-secreta-para-nextauth

# OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --------------------------------------------
# MERCADO PAGO (CLIENT-SIDE)
# --------------------------------------------
NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-...

# --------------------------------------------
# ANALYTICS & MONITORAMENTO
# --------------------------------------------
# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_AUTH_TOKEN=

# PostHog (opcional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (opcional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Hotjar (opcional)
NEXT_PUBLIC_HOTJAR_ID=

# --------------------------------------------
# FEATURE FLAGS (CLIENT)
# --------------------------------------------
NEXT_PUBLIC_FF_MAINTENANCE_MODE=false
NEXT_PUBLIC_FF_NEW_FEATURES=false
